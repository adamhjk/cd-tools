# nginx gerrit application vhost
#
# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.
#

server {
<% @listen_ports.each do |port| -%>
  listen            <%= port %>;
<% end -%>
  server_name       <%= @host_name %><% @host_aliases.each do |a| %><%= " #{a}" %> <% end %>;

  client_max_body_size <%= @max_upload_size %>;

  location / {
    proxy_pass <%= node['gerrit']['http_listen_url'] =~ /(http:.+)\/$/; $1 %>;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
  }

  error_log         <%= node['nginx']['log_dir'] %>/gerrit-error.log;
  access_log        <%= node['nginx']['log_dir'] %>/gerrit-access.log;
}

