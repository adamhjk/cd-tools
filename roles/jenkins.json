{
  "name": "jenkins",
  "description": "Jenkins and Gerrit Server",
  "json_class": "Chef::Role",
  "default_attributes": {
    "gerrit": {
      "http_proxy": {
        "host_name": "review.local"
      },
      "canonical_url": "http://review.local/"
    },
    "jenkins": {
      "http_proxy": {
        "host_name": "jenkins.local",
        "variant": "nginx"
      },
      "server": {
        "plugins": [
          "git",
          "build-pipeline-plugin",
          "github",
          "greenballs",
          "analysis-core",
          "warnings",
          "parameterized-trigger"
        ]
      }
    },
    "cd-tools": {
      "gerrit": {
        "hostname": "review.local",
        "front_end_url": "http://review.local/"
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[yum]",
    "recipe[build-essential]",
    "recipe[nginx::source]",
    "recipe[java]",
    "recipe[jenkins]",
    "recipe[postgresql::server]",
    "recipe[gerrit]",
    "recipe[foodcritic]",
    "recipe[cd-tools]"
  ],
  "env_run_lists": {
  }
}
